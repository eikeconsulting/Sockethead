@model Sockethead.Razor.Forms.SubmitButton

@{
    string css = $"btn {Model.Css}"; 
    string controller = Model.Controller ?? ViewContext.RouteData.Values["controller"].ToString();
    string action = Model.Action ?? ViewContext.RouteData.Values["action"].ToString();
}

<input type="submit" value="@Model.Label" class="@css" asp-action="@action" asp-controller="@controller" />
