@model UserProfile

<div class="row">
    <div class="col-md-6">
        @(await Html
            .SimpleForm(Model)
            .AddRowsForModel()
            
            // add a save button and specify the action specifically
            .AddSubmitButton(
                label: "Save Changes", 
                actionName: "Buttons")
            
            // add a save button and accept the default action
            .AddSubmitButton(
                label: "Save Changes",
                css: "btn btn-danger")
            
            // add a link button to the current page which will reload the page
            .AddLinkButton(
                label: "Reset Form", 
                url: "Buttons", 
                css: "btn btn-secondary")
            
            .RenderAsync())
    </div>
    <div class="col-md-6">
        <h4>Razor</h4>
        <pre><code>@@(await Html
    .SimpleForm(Model)
    .AddRowsForModel()
    
    // add a save button and specify the action specifically
    .AddSubmitButton(
        label: "Save Changes", 
