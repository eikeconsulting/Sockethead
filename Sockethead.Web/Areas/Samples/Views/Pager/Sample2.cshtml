@using Sockethead.Razor.Grid;
@model IQueryable<Sockethead.Web.Areas.Samples.Controllers.SampleModel>

@(await Html
    .SimpleGrid(Model)
    .AddColumnFor(model => model.First)
    .AddColumnFor(model => model)
    .AddColumn(col => col
        .For(model => model.JobTitle)
        .Css(elements =>
        {
            elements.Header.AddStyle("font-style: italic");
            elements.Item.AddStyle("font-weight: bold");
        }))
    .Css(elements =>
    {
        elements.Table
            .AddClass("table-striped")
            .AddClass("table-sm");
    })
    .RenderAsync()
)
