<div class="row">

    <div class="col-md-6">

@(await Html
    .SimpleGrid(Model.Take(2))

    .AddColumn(column => column
        .Header("Movie")
        .TwoColumnGrid((model, builder) =>
        {
            builder.Add("Name", model.Name);

            builder.Add(model, builder => builder
                .Add(model => model.Name)
                .Add(model => model.Director)
                .Add(model => model.Genre)
                .Add(model => model.Released));
        }))

    .RenderAsync())

