@model IQueryable<Movie>

<div class="row">
    <div class="col-md-6">

        @(await Html
    .SimpleGrid(Model.Take(2))

    .AddColumn(column => column
        .Header("Movie")
        .Css(css => css.Item.AddStyle("max-width: 330px;"))
        .TwoColumnGrid(model => model))

    .AddColumn(column => column
        .For(movie => movie.Cast)
        .DisplayAsList(movie => movie.Cast))

    .RenderAsync())

    </div>

