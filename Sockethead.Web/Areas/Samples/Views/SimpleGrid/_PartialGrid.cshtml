@using System.Linq; 
@model IQueryable<Movie>

@(await Html
    .SimpleGrid(Model)
    .AddColumnsFromModel()
    .Sortable()
    .AddPager(options =>
    {
        options.RowsPerPage = 10;
        options.RowsPerPageOptions = new[] { 3, 5, 10, 50 };
    })
    .AddSearch("Name", (source, query) => source.Where(movie => movie.Name.Contains(query)))
    .Options(options =>
    {
        options.SearchViewName = null;
    })
    .RenderAsync())
