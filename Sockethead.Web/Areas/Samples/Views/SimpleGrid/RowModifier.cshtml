@model IQueryable<Movie>

@(await Html
    .SimpleGrid(Model)
    .AddColumnsFromModel()
    .AddCss(elements => elements.Table.AddClass("table-striped").AddStyle("color:black"))
    .AddRowModifier(movie => movie.Director.Contains("James"), css => css.AddStyle("background-color:red"))
    .AddRowModifier(movie => movie.Name.Contains("Rocky"), css => css.AddStyle("background-color:green"))
    .Sortable()
    .RenderAsync()
)
